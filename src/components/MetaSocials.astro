---
interface pageImage {
    url: string,
    type?: string,
    width?: string | number,
    height?: string | number
}
interface Props {
    pageTitle: string,
    pageAuthor: string,
    pageImage: pageImage,
    description: string
}

const { pageTitle, pageAuthor, pageImage, description} = Astro.props;
---
{/*  Generic tags  */}
<meta name="author" content={pageAuthor} />
<meta name="description" content={description} />

{/*  Open Graph tags  */}
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:locale" content="it_IT" />
{pageImage && 
<meta property="og:image" content={pageImage.url} />}
{pageImage?.type &&
<meta property="og:image:type" content={pageImage.type} />}
{(pageImage?.width && pageImage?.height) &&
<meta property="og:image:width" content={`${pageImage.width}`} />
<meta property="og:image:height" content={`${pageImage.height}`} />}

{/*  Twitter Card tags  */}
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={description} />
{pageImage && 
<meta name="twitter:image" content={pageImage.url} />}